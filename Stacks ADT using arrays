//Update Stacks ADT using arrays
#include <stdio.h>
#define MAX 100

int stack[MAX];
int top = -1;

void push(int value) {
    if (top == MAX - 1) {
        printf("Stack overflow\n");
    } else {
        stack[++top] = value;
    }
}

int pop() {
    if (top == -1) {
        printf("Stack underflow\n");
        return -1;
    } else {
        return stack[top--];
    }
}

void display() {
    if (top == -1) {
        printf("Stack is empty\n");
    } else {
        printf("Stack elements: ");
        for (int i = top; i >= 0; i--) {
            printf("%d ", stack[i]);
        }
        printf("\n");
    }
}

int main() {
    int n, value;
    printf("Stack operations using arrays:\n");

    
    printf("Enter how many elements to push: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &value);
        push(value);
    }

   
    printf("\nStack after pushing %d elements:\n", n);
    display();

 
    int popped = pop();
    if (popped != -1) {
        printf("\nPopped element: %d\n", popped);
    }

   
    printf("Stack after popping one element:\n");
    display();

    return 0;
}
